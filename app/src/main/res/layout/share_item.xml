<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_343"
    android:layout_marginLeft="@dimen/dp_7"
    android:layout_marginRight="@dimen/dp_7"
    android:layout_marginTop="@dimen/dp_11"
    android:background="@drawable/line6"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_17"
    android:paddingRight="@dimen/dp_17">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_33">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="发布日期"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="昨天 20:15"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="#F5F6FA" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_61"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:text="【旅行者.漫步hotel】这家众筹的旅行者民宿，藏身 于画外桐坞深处。让人想在这里住上十天，因为这里有十间房。叔叔宿舍睡觉时司机师傅大惊失色是…"
        android:textColor="#333"
        android:textSize="@dimen/sp_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#F5F6FA" />

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_148" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_22"
        android:background="#F5F6FA" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18">

        <TextView
            android:id="@+id/share_item_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="¥128"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/fenxiang1"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/share_item_jiage"
            android:src="@mipmap/fengxiang1" />

        <TextView
            android:id="@+id/item_fenxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/fenxiang1"
            android:text="分享赚35"
            android:textColor="#333333"
            android:textSize="@dimen/sp_11" />

        <LinearLayout
            android:layout_width="@dimen/dp_87"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/line2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="一键分享"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_weight="1"
                android:src="@mipmap/fenxiang" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
