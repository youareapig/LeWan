<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:alpha="0.5"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line13"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_132">

            <ImageView
                android:id="@+id/guige_close"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_23"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@drawable/close" />

            <ImageView
                android:id="@+id/guige_img"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_78"
                android:layout_marginTop="@dimen/dp_28"
                android:background="#3636" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_78"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_28"
                android:layout_toRightOf="@+id/guige_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/guige_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="¥19.90"
                    android:textColor="#F77917"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/guige_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="【小龙坎麻辣浓汤火锅】"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/guige_kucun"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="库存：500"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/guige_yishou"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="已售：342"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/lineview" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="选择规格"
            android:textColor="#333"
            android:textSize="@dimen/sp_15" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/guige_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13" />
    </LinearLayout>


</LinearLayout>
