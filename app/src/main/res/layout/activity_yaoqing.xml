<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.leiwan.zl.yaoqing.YaoqingActivity">

    <RelativeLayout style="@style/title">

        <ImageView
            android:id="@+id/back"
            style="@style/titleback"
            android:src="@mipmap/back" />

        <TextView
            style="@style/titlename"
            android:text="邀请好友" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5CA7F"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_39"
            android:text="分 享 邀 请 码"
            android:textColor="#fff"
            android:textSize="@dimen/sp_17" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginRight="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_19"
            android:background="#fff">

            <ImageView
                android:id="@+id/head"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_38" />

            <TextView
                android:id="@+id/wodema"
                android:layout_below="@+id/head"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_9"
                android:text="我 的 邀 请 码"
                android:textColor="#999999"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/ma"
                android:layout_below="@+id/wodema"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="DFSDGDS"
                android:textColor="#E1B872"
                android:textSize="@dimen/sp_19" />

            <ImageView
                android:id="@+id/erweima"
                android:layout_below="@+id/ma"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_211"
                android:layout_height="@dimen/dp_189"
                android:layout_marginTop="@dimen/dp_13"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_below="@+id/erweima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="分享链接"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="生成海报"
                    android:textColor="#E1B872"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
