<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_22">

    <TextView
        android:layout_width="@dimen/dp_109"
        android:layout_height="@dimen/dp_17"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/line10"
        android:gravity="center"
        android:text="11月08日 15:35:10"
        android:textColor="#ccc"
        android:textSize="@dimen/sp_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        android:layout_marginBottom="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_12"
        android:background="#fff"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/line11" />

            <TextView
                android:id="@+id/dingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="新订单"
                android:textColor="#333"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_18"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="您有一条新的预约订单"
            android:textColor="#ccc"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/jiantou" />
    </RelativeLayout>
</LinearLayout>
