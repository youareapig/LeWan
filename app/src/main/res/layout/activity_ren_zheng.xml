<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.leiwan.zl.shiming.RenZhengActivity">

    <RelativeLayout
        style="@style/title"
        android:background="#fff">

        <ImageView
            android:id="@+id/back"
            style="@style/titleback"
            android:src="@mipmap/back" />

        <TextView
            style="@style/titlename"
            android:text="实名认证" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/lineview" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_19"
        android:text="请填写您的个人信息"
        android:textColor="#cccccc"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_166"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/line6"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:text="真实姓名"
            android:textColor="#E1B872"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/username"
            android:layout_width="@dimen/dp_127"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请填写您的真实姓名"
            android:singleLine="true"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:text="身份证号"
            android:textColor="#E1B872"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/userIDcard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请填写您的身份证号码"
            android:singleLine="true"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_29"
        android:text="请填写您的个人信息"
        android:textColor="#cccccc"
        android:textSize="@dimen/sp_13" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/idcard1"
            android:layout_width="@dimen/dp_169"
            android:layout_height="@dimen/dp_107"
            android:scaleType="centerCrop"
            android:background="#369" />

        <ImageView
            android:id="@+id/idcard2"
            android:layout_width="@dimen/dp_169"
            android:layout_height="@dimen/dp_107"
            android:layout_alignParentRight="true"
            android:background="#369" />
    </RelativeLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_48"
        android:background="@drawable/jianbian2"
        android:gravity="center"
        android:text="提交审核"
        android:textColor="#fff"
        android:textSize="@dimen/sp_15" />
</LinearLayout>
