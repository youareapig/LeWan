<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_306"
        android:layout_height="@dimen/dp_102"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5">

        <ImageView
            android:layout_width="@dimen/dp_306"
            android:layout_height="@dimen/dp_102"
            android:layout_centerHorizontal="true"
            android:background="#ccc" />

        <RelativeLayout
            android:id="@+id/icon_bank"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_13">

            <ImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@mipmap/yuan" />

            <ImageView
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_centerInParent="true"
                android:src="@mipmap/zhaoshang" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toRightOf="@+id/icon_bank"
            android:text="中国招商银行"
            android:textColor="#fff"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/item_bankid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_bank"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_17"
            android:text="**********9527"
            android:textColor="#fff"
            android:textSize="@dimen/sp_21" />
    </RelativeLayout>

</LinearLayout>
