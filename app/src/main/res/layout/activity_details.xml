<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.leiwan.zl.details.DetailsActivity">

    <RelativeLayout style="@style/title">

        <ImageView
            android:id="@+id/back"
            style="@style/titleback"
            android:src="@mipmap/back" />

        <TextView
            style="@style/titlename"
            android:text="美食" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/lineview" />
    </RelativeLayout>

    <com.youth.banner.view.BannerViewPager
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_173" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:background="#F76E1E"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥19.90"
            android:textColor="#fff"
            android:textSize="@dimen/sp_22" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="¥179.00"
                android:textColor="#fff"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_51"
                android:layout_height="@dimen/dp_1"
                android:layout_centerInParent="true"
                android:background="#fff" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_40"
            android:text="该商品距离结束：03天08:12:34"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:text="【小龙坎麻辣浓汤火锅】"
        android:textColor="#333"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:text="家庭聚餐不在众口难调，三档可调清汤红锅任你选择,火锅 , 全年复合创收 , 野生菌火锅。"
        android:textColor="#333"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <TextView
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="center_vertical"
            android:background="@drawable/line9"
            android:gravity="center"
            android:text="限量抢购"
            android:textColor="#F7AE31"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/line9"
            android:gravity="center"
            android:text="家庭聚餐"
            android:textColor="#F7AE31"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_134"
            android:text="佣金："
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="¥13.5"
            android:textColor="#F77917"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_11"
        android:background="@color/lineview" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text="商家地址"
            android:textColor="#999"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_6"
            android:src="@mipmap/dingwei1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="四川省成都市青羊区宽窄巷子66号"
            android:textColor="#999"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_6"
            android:src="@mipmap/jiantou" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_11"
        android:background="@color/lineview" />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/xinshou_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        app:xTabDisplayNum="3"
        app:xTabDividerWidthWidthText="true"
        app:xTabIndicatorColor="#E1B872"
        app:xTabIndicatorHeight="@dimen/dp_4"
        app:xTabMode="scrollable"
        app:xTabSelectedTextColor="#333333"
        app:xTabTextColor="#999999"
        app:xTabTextSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#fff">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal" />
    </RelativeLayout>
</LinearLayout>
