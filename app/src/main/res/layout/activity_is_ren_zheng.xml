<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.leiwan.zl.shiming.IsRenZhengActivity">

    <RelativeLayout style="@style/title">

        <ImageView
            android:id="@+id/back"
            style="@style/titleback"
            android:src="@mipmap/back" />

        <TextView
            style="@style/titlename"
            android:text="实名认证" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/lineview" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/isrenzheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_194"
                android:layout_marginTop="@dimen/dp_38"
                android:background="#E5C489" />

            <ImageView
                android:layout_width="@dimen/dp_73"
                android:layout_height="@dimen/dp_73"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_7"
                android:background="#030" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addadr"
            android:layout_width="@dimen/dp_236"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_58"
            android:background="@drawable/jianbian4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:src="@mipmap/shuxin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="去添加银行卡"
                    android:textColor="#E1B872"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_98"
            android:layout_height="@dimen/dp_98"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_57"
            android:src="@mipmap/renzhengshibai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:text="审核失败"
            android:textColor="#999"
            android:textSize="@dimen/sp_15" />

        <RelativeLayout
            android:id="@+id/agin"
            android:layout_width="@dimen/dp_236"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_58"
            android:background="@drawable/jianbian4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:src="@mipmap/shuxin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="重新认证"
                    android:textColor="#E1B872"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_29"
            android:text="正确提交注意事项"
            android:textColor="#333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:text="1. 使用大于200万像素的手机对身份证原件进行拍摄。               2. 尽量使身份证在留有四个边缘的情况下少留背景，背景建议为均匀白色，避免其他装饰（人、物体等）。建议不要手持证件拍摄。                                                                                                    3. 拍摄角度保持垂直，避免倾斜过大造成图像变型。                   4. 拍摄时聚焦清晰，避免文字和数字模糊不清。                         5. 拍摄时尽量保证照明光线均匀，避免反光、阴影或亮斑。"
            android:textColor="#999"
            android:lineSpacingExtra="@dimen/dp_8"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>
</LinearLayout>
