<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bar</item>
        <item name="colorPrimaryDark">@color/bar</item>
        <item name="colorAccent">@color/weixuanzhong</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
    </style>

    <style name="titleback">
        <item name="android:layout_width">@dimen/dp_25</item>
        <item name="android:layout_height">@dimen/dp_25</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_18</item>
    </style>

    <style name="titlename">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>
</resources>
