<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_169">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_159"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/line3"
        android:elevation="3dp"
        android:paddingLeft="@dimen/dp_19"
        android:paddingTop="@dimen/dp_19">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称："
                android:textColor="#999"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="小龙坎麻辣浓麻辣浓麻辣浓麻辣浓汤火锅"
                android:textColor="#333"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="#999"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/ordercode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23831323435823733"
                android:textColor="#333"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expendview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout3"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费电子码："
                android:textColor="#999"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/expendcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HD3539I13"
                android:textColor="#333"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>


        <TextView
            android:id="@+id/validdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="商品期限：2018-09-24至2018-11-31"
            android:textColor="#999"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/ordertag"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_33"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/line28"
            android:gravity="center"
            android:text="去预约"
            android:textColor="#fff"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
