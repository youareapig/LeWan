<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="@dimen/dp_337"
        android:layout_height="@dimen/dp_159"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/dp_19"
        android:paddingTop="@dimen/dp_19"
        android:elevation="5dp"
        android:background="@drawable/line3">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称:"
            android:textColor="#999999"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:layout_below="@+id/textName"
            android:id="@+id/textID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/textID"
            android:id="@+id/textMa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费电子码:"
            android:textColor="#999999"
            android:textSize="@dimen/dp_15" />
        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@+id/textName"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小龙坎麻辣烫"
            android:textSize="@dimen/dp_15"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/id"
            android:layout_toRightOf="@+id/textID"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9527"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/ma"
            android:layout_toRightOf="@+id/textMa"
            android:layout_below="@+id/id"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TX9527"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#333333"/>
        <TextView
            android:layout_marginTop="@dimen/dp_18"
            android:layout_below="@+id/textMa"
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品期限:"
            android:textColor="#999999"
            android:textSize="@dimen/dp_11" />
        <TextView
            android:layout_marginTop="@dimen/dp_18"
            android:layout_below="@+id/textMa"
            android:id="@+id/date"
            android:layout_toRightOf="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2011-01-05至2015-05-12"
            android:textColor="#999999"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_11" />
    </RelativeLayout>
</LinearLayout>
