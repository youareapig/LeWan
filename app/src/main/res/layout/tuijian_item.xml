<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <LinearLayout
        android:layout_width="@dimen/dp_159"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_96"
            android:background="#256">

            <ImageView
                android:layout_width="@dimen/dp_159"
                android:layout_height="@dimen/dp_96" />

            <RelativeLayout
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_17"
                android:layout_alignParentBottom="true"
                android:background="#F77917">

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/dingwei"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_2"/>

                <TextView
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_10"
                    android:textColor="#fff"
                    android:text="青羊区" />
            </RelativeLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【万达瑞华国际酒店】"
            android:textColor="#333"
            android:textSize="@dimen/sp_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dp_3"
            android:text="三星级酒店，管家式服务支持机场接送，距兰桂坊500米…"
            android:ellipsize="end"
            android:textColor="#333"
            android:maxLines="2"

            android:textSize="@dimen/sp_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_3"
                android:text="¥ 175"
                android:textColor="#F77917"
                android:textSize="@dimen/sp_15"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_7">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:text="¥468"
                    android:textColor="#999999"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/sp_15"/>
                <View
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_1"
                    android:background="#999"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_3"
                android:text="佣金:"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_3"
                android:text="¥43.7"
                android:textColor="#EAC380"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_7"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
