<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.leiwan.zl.details.DetailsActivity">

    <RelativeLayout style="@style/title">

        <ImageView
            android:id="@+id/back"
            style="@style/titleback"
            android:src="@mipmap/back" />

        <TextView
            style="@style/titlename"
            android:text="美食" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/lineview" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_weight="1">


        <com.leiwan.zl.utils.ObservableScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/hideview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_173" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_34"
                        android:background="#F76E1E"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12">

                        <TextView
                            android:id="@+id/goods_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥19.90"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_22" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10">

                            <TextView
                                android:id="@+id/goods_price1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="¥179.00"
                                android:textColor="#fff"
                                android:textSize="@dimen/sp_12" />

                            <View
                                android:layout_width="@dimen/dp_51"
                                android:layout_height="@dimen/dp_1"
                                android:layout_centerInParent="true"
                                android:background="#fff" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/dp_40"
                            android:text="该商品距离结束：03天08:12:34"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/goods_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="【小龙坎麻辣浓汤火锅】家庭聚餐不在众口难调，三档可调清汤红锅任你选择,火锅 , 全年复合创收 , 野生"
                        android:textColor="#333"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:id="@+id/goods_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="家庭聚餐不在众口难调，三档可调清汤红锅任你选择,火锅 , 全年复合创收 , 野生菌火锅。"
                        android:textColor="#333"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12">

                        <TextView
                            android:layout_width="@dimen/dp_52"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/line9"
                            android:gravity="center"
                            android:text="限量抢购"
                            android:textColor="#F7AE31"
                            android:textSize="@dimen/sp_11" />

                        <TextView
                            android:id="@+id/goods_tag1"
                            android:layout_width="@dimen/dp_52"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:background="@drawable/line9"
                            android:gravity="center"
                            android:text="家庭聚餐"
                            android:textColor="#F7AE31"
                            android:textSize="@dimen/sp_11" />

                        <TextView
                            android:id="@+id/goods_tag2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_134"
                            android:text="佣金："
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/goods_yongjin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="¥13.5"
                            android:textColor="#F77917"
                            android:textSize="@dimen/sp_17" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_11"
                        android:background="@color/lineview" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="商家地址"
                            android:textColor="#999"
                            android:textSize="@dimen/sp_15" />

                        <ImageView
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_22"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_6"
                            android:src="@mipmap/dingwei1" />

                        <TextView
                            android:id="@+id/goods_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_24"
                            android:text="四川省成都市青羊区宽窄巷子66号"
                            android:textColor="#999"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/dp_6"
                            android:src="@mipmap/jiantou" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_11"
                        android:background="@color/lineview" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/useinfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="特色介绍"
                            android:textColor="#333"
                            android:textSize="@dimen/sp_15" />

                        <View
                            android:id="@+id/useinfo_icon"
                            android:layout_width="@dimen/dp_23"
                            android:layout_height="@dimen/dp_6"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="#F77917" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="购买须知"
                            android:textColor="#333"
                            android:textSize="@dimen/sp_15" />

                        <View
                            android:id="@+id/description_icon"
                            android:layout_width="@dimen/dp_23"
                            android:layout_height="@dimen/dp_6"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="#F77917"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/lineview" />

                <WebView
                    android:id="@+id/goods_useinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10" />

                <WebView
                    android:id="@+id/goods_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_9"
                        android:layout_gravity="center"
                        android:src="@mipmap/xiegang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:text="商品推荐"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_9"
                        android:layout_gravity="center"
                        android:src="@mipmap/xiegang" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="465dp"
                    android:layout_marginTop="@dimen/dp_13">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="465dp" />

                    <LinearLayout
                        android:id="@+id/points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </RelativeLayout>
            </LinearLayout>
        </com.leiwan.zl.utils.ObservableScrollView>

        <RelativeLayout
            android:id="@+id/menu1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/useinfo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="特色介绍"
                        android:textColor="#333"
                        android:textSize="@dimen/sp_15" />

                    <View
                        android:id="@+id/useinfo_icon1"
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_6"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="#F77917" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/description1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="购买须知"
                        android:textColor="#333"
                        android:textSize="@dimen/sp_15" />

                    <View
                        android:id="@+id/description_icon1"
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_6"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="#F77917"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/lineview" />
        </RelativeLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/jianbian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/index"
            android:layout_width="@dimen/dp_123"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="首页"
            android:textColor="#333"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/shared"
            android:layout_width="@dimen/dp_87"
            android:layout_height="match_parent"
            android:background="#E1B872"
            android:gravity="center"
            android:text="分享"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/shopping"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F77917"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15" />
    </LinearLayout>
</LinearLayout>
