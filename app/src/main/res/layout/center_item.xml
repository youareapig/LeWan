<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_112"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12">

    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/dp_232"
        android:layout_height="@dimen/dp_75"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="【预约】美年大健康300抢购11个健康大套餐、11个分店通用，为您的健康保驾护航"
        android:textColor="#333"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/click"
        android:layout_width="@dimen/dp_73"
        android:layout_height="@dimen/dp_28"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/line9"
        android:gravity="center"
        android:text="点击预约"
        android:textColor="#FF8B30"
        android:textSize="@dimen/sp_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:background="#979797" />
</RelativeLayout>
