<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.leiwan.zl.regist.RegistActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_235">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_182"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg20" />

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_12">

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/back1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="@dimen/sp_19" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_56"
            android:text="乐 玩 联 盟"
            android:textColor="#fff"
            android:textSize="@dimen/sp_19" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_93"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_136"
            android:background="@drawable/line6"
            android:elevation="5dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Welcome back！"
                android:textColor="#FF8B30"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="欢迎您加入乐玩联盟高品质抢购平台"
                android:textColor="#999"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_29">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_63"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_43"
                    android:layout_alignParentBottom="true"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="#333"
                    android:textColorHint="#e9e9e9"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="#e9e9e9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_107"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_29">

                <TextView
                    android:id="@+id/text_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_43"
                    android:layout_alignParentBottom="true"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="#333"
                    android:textColorHint="#e9e9e9"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="获取验证码"
                    android:textColor="#FF8B30"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/et_tel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_43"
                    android:layout_below="@+id/text_tel"
                    android:background="@null"
                    android:hint="请输入11位手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="#333"
                    android:textColorHint="#e9e9e9"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/et_tel"
                    android:background="#e9e9e9" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="#e9e9e9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_63"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_29">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乐玩邀请码"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_43"
                    android:layout_alignParentBottom="true"
                    android:background="@null"
                    android:hint="请输入邀请码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="#333"
                    android:textColorHint="#e9e9e9"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="#e9e9e9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_29">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="绑定微信号"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_18"
                    android:text="未授权"
                    android:textColor="#999"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/jiantou" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_43"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_9"
                    android:src="@mipmap/gouxuan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="我已阅读并同意"
                    android:textColor="#999"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/fuwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《服务协议》"
                    android:textColor="#FF8B30"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="和"
                    android:textColor="#999"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/yinsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《隐私政策》"
                    android:textColor="#FF8B30"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dp_207"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/loginbutton"
                android:gravity="center"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
