<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.leiwan.zl.dingdan.details.DaiFuKuanDetailsActivity">

    <RelativeLayout
        style="@style/title"
        android:background="#fff">

        <ImageView
            android:id="@+id/back"
            style="@style/titleback"
            android:src="@mipmap/back2" />

        <TextView
            style="@style/titlename"
            android:text="我的订单"
            android:textColor="#333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/lineview" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_190"
                    android:background="@drawable/jianbian9">

                    <TextView
                        android:id="@+id/dingdan_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_42"
                        android:text="待付款"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_18" />

                    <View
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_7"
                        android:layout_below="@+id/dingdan_tag"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="#fff" />

                    <com.leiwan.zl.utils.TimeOverView2
                        android:id="@+id/dingdan_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_58" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_85"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/line21">

                        <TextView
                            android:layout_width="@dimen/dp_118"
                            android:layout_height="@dimen/dp_56"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/line22"
                            android:gravity="center"
                            android:text="订单信息"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_18" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_20">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginRight="@dimen/dp_16">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品:"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/dingdan_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lineSpacingExtra="5dp"
                            android:maxLines="2"
                            android:text="            【4人团套餐温泉票】有spa按摩+精油按 摩项目+娱乐设施+亲子活"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="规格:"
                                android:textColor="#999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/dingdan_guige"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:text="¥39.9*3份"
                                android:textColor="#333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_30"
                                android:text="优惠券:"
                                android:textColor="#999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/dingdan_youhui"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:text="已选8折券"
                                android:textColor="#333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lineview" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="实付:"
                                android:textColor="#999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/dingdan_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:text="¥39"
                                android:textColor="#333"
                                android:textSize="@dimen/sp_15" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lineview" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52">

                        <TextView
                            android:id="@+id/dingdan_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="订单编号：62386836583648756386"
                            android:textColor="#999"
                            android:textSize="@dimen/sp_15" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lineview" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52">

                        <TextView
                            android:id="@+id/dingdan_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="有效日期：2018-10-11至2018-11-30"
                            android:textColor="#999"
                            android:textSize="@dimen/sp_15" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lineview" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52">

                        <TextView
                            android:id="@+id/dingdan_submittime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="下单时间：2018-10-11 13:56"
                            android:textColor="#999"
                            android:textSize="@dimen/sp_15" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lineview" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_73">

                        <View
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_17"
                            android:background="#666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_17"
                            android:text="联系商家"
                            android:textColor="#333"
                            android:textSize="@dimen/sp_13" />

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_17"
                            android:src="@mipmap/dingwei" />

                        <TextView
                            android:id="@+id/dingdan_address"
                            android:layout_width="@dimen/dp_213"
                            android:layout_height="@dimen/dp_20"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="四川省成都市青羊区奎星楼155楼楼楼楼"
                            android:textColor="#9B9B9B"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:layout_marginRight="@dimen/dp_26"
                            android:text="导航"
                            android:textColor="#FF8B30"
                            android:textSize="@dimen/sp_13" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lineview" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52">


                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_17"
                            android:src="@mipmap/phone_icon" />

                        <TextView
                            android:id="@+id/phonenumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="028-83782472"
                            android:textColor="#9B9B9B"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_33"
                            android:layout_toRightOf="@+id/phonenumber"
                            android:text="拨打"
                            android:textColor="#FF8B30"
                            android:textSize="@dimen/sp_13" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lineview" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_131">

                        <View
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_17"
                            android:background="#666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_17"
                            android:text="联系人信息"
                            android:textColor="#333"
                            android:textSize="@dimen/sp_13" />


                        <TextView
                            android:id="@+id/dingdan_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_60"
                            android:text="联系人： 刘熙"
                            android:textColor="#333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/dingdan_people_tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_98"
                            android:text="联系电话： 189-2453-2671"
                            android:textColor="#333"
                            android:textSize="@dimen/sp_15" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lineview" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_23"
                            android:layout_height="@dimen/dp_23"
                            android:src="@mipmap/guanzhu_icon" />

                        <TextView
                            android:layout_width="@dimen/dp_73"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:background="@drawable/line23"
                            android:gravity="center"
                            android:text="关注公众号"
                            android:textColor="#F76E1E"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_19"
                    android:background="#F5F6FA" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="465dp"
                    android:layout_marginTop="@dimen/dp_13">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="465dp" />

                    <LinearLayout
                        android:id="@+id/points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/dingdan_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="#F77917"
                    android:gravity="center"
                    android:text="立即支付"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/noticeview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="-25dp"
            android:background="#FFEBC9"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/tongzhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请在支付时效内完成付款，超时未付款订单将被自动取消"
                android:textColor="#F15914"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/noticeviewshow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="#FFEBC9"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/tongzhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请在支付时效内完成付款，超时未付款订单将被自动取消"
                android:textColor="#F15914"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
