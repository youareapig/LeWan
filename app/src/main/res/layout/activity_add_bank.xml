<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.leiwan.zl.bank.AddBankActivity">

    <RelativeLayout
        style="@style/title"
        android:background="#fff">

        <ImageView
            android:id="@+id/back"
            style="@style/titleback"
            android:src="@mipmap/back" />

        <TextView
            style="@style/titlename"
            android:text="添加银行卡" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/lineview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_337"
        android:layout_height="@dimen/dp_43"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_19"
        android:background="@drawable/line6">

        <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:text="持卡人"
            android:textColor="#333"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_21"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_19"
            android:layout_toRightOf="@+id/textname"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入姓名"
            android:singleLine="true"
            android:textColor="#333"
            android:textColorHint="#d8d8d8"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_337"
        android:layout_height="@dimen/dp_43"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/line6">

        <TextView
            android:id="@+id/textid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:text="卡号"
            android:textColor="#333"
            android:textSize="@dimen/sp_15" />

        <com.leiwan.zl.utils.BandCardEditText
            android:id="@+id/userbankId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_21"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_19"
            android:layout_toRightOf="@+id/textid"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入银行卡号"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#333"
            android:textColorHint="#d8d8d8"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_337"
        android:layout_height="@dimen/dp_43"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/line6">

        <TextView
            android:id="@+id/textbanktype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:text="银行类型"
            android:textColor="#333"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/userbanktype"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_21"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_19"
            android:layout_toRightOf="@+id/textbanktype"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请选择银行卡机构类型"
            android:textColor="#333"
            android:textColorHint="#d8d8d8"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_337"
        android:layout_height="@dimen/dp_43"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/line6">

        <TextView
            android:id="@+id/textkaihu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:text="开户行"
            android:textColor="#333"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/userkaihu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_21"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_19"
            android:layout_toRightOf="@+id/textkaihu"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入银行卡开户地址"
            android:textColor="#333"
            android:textColorHint="#d8d8d8"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_337"
        android:layout_height="@dimen/dp_43"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/line6">

        <TextView
            android:id="@+id/texttel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:text="联系电话"
            android:textColor="#333"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/userphone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_21"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_19"
            android:layout_toRightOf="@+id/texttel"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入您的联系电话"
            android:inputType="number"
            android:textColor="#333"
            android:textColorHint="#d8d8d8"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_53"
        android:background="@drawable/jianbian2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加银行卡"
            android:textColor="#fff"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_38"
        android:text="温馨提示："
        android:textColor="#E1B872"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_10"
        android:text="请填写真实信息，才能提现，仅支持储蓄卡不支持信用卡。 带有银联标示的卡，都支持添"
        android:textColor="#cccccc"
        android:textSize="@dimen/sp_12" />
</LinearLayout>
