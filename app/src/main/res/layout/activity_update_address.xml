<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.leiwan.zl.address.UpdateAddressActivity">

    <RelativeLayout style="@style/title">

        <ImageView
            android:id="@+id/back"
            style="@style/titleback"
            android:src="@mipmap/back" />

        <TextView
            style="@style/titlename"
            android:text="编辑收货地址" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/lineview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:paddingLeft="@dimen/dp_23">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="收货人:"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_23"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_79"
            android:background="@null"
            android:singleLine="true"
            android:text="张三"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/lineview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:paddingLeft="@dimen/dp_23">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号码："
            android:textColor="#666666"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_23"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_79"
            android:background="@null"
            android:inputType="number"
            android:singleLine="true"
            android:text="189****6532"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/lineview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:paddingLeft="@dimen/dp_23">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="所在地区："
            android:textColor="#666666"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/diqu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_23"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_79"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/textView"
            android:background="@null"
            android:singleLine="true"
            android:text="四川省成都市锦江区城区"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/lineview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:paddingLeft="@dimen/dp_23">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="详细地址："
            android:textColor="#666666"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/dizhi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_23"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_79"
            android:background="@null"
            android:singleLine="true"
            android:text="龙舟路华润广场A栋1811室"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/lineview" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/save"
        android:layout_width="@dimen/dp_236"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_125"
        android:background="@drawable/jianbian3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>
</LinearLayout>
