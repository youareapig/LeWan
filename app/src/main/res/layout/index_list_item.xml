<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_8"
    android:paddingRight="@dimen/dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_129"
            android:layout_height="@dimen/dp_86">

            <ImageView
                android:id="@+id/index_list_item_image"
                android:layout_width="@dimen/dp_129"
                android:layout_height="@dimen/dp_86"
                android:src="@mipmap/ic_launcher" />

            <RelativeLayout
                android:layout_width="@dimen/dp_129"
                android:layout_height="@dimen/dp_19"
                android:layout_alignParentBottom="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_19"
                    android:alpha="0.2"
                    android:background="#000000" />

                <ImageView
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_9"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:src="@mipmap/location" />

                <TextView
                    android:id="@+id/index_list_item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:text="成都"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_9" />

                <TextView
                    android:id="@+id/index_list_item_juli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="15KM"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_9" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/index_list_item_title"
                android:layout_width="@dimen/dp_198"
                android:layout_height="@dimen/dp_40"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="款式否是价水电费科技时代付款"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/index_list_item_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥128"
                    android:textColor="@color/xuanzhong"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/index_list_item_youhui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="返¥12"
                    android:textColor="#F77917"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/index_list_item_xiaoliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_45"
                    android:text="已售578"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="距结束"
                    android:textColor="#E1B872"
                    android:textSize="@dimen/sp_12" />

                <com.leiwan.zl.utils.SnapUpCountDownTimerView
                    android:id="@+id/item_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_11" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#cccccc" />
</LinearLayout>
