<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.leiwan.zl.dingdan.DingDanZhiFuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout style="@style/title">

                <ImageView
                    android:id="@+id/back"
                    style="@style/titleback"
                    android:src="@mipmap/back" />

                <TextView
                    style="@style/titlename"
                    android:text="订单支付" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lineview" />
            </RelativeLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_123"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_19"
                        android:background="@drawable/line3"
                        android:elevation="5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_86"
                            android:background="@drawable/line13"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_12">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="@dimen/dp_199"
                                android:layout_height="@dimen/dp_53"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="【小龙坎麻辣浓汤火锅】"
                                android:textColor="#333"
                                android:textSize="@dimen/sp_18" />

                            <TextView
                                android:id="@+id/name1"
                                android:layout_width="@dimen/dp_93"
                                android:layout_height="@dimen/dp_53"
                                android:layout_alignParentRight="true"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="家庭聚餐好去处"
                                android:textColor="#333"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/dp_13"
                                android:text="¥"
                                android:textColor="#333"
                                android:textSize="@dimen/sp_21" />

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/dp_13"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:text="19.3"
                                android:textColor="#333"
                                android:textSize="@dimen/sp_21" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/dp_13"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_toRightOf="@+id/price">

                                <TextView
                                    android:id="@+id/moneytag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:text="¥"
                                    android:textColor="#999"
                                    android:textSize="@dimen/sp_13" />

                                <TextView
                                    android:id="@+id/yuanjia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dp_3"
                                    android:layout_toRightOf="@+id/moneytag"
                                    android:text="179"
                                    android:textColor="#999"
                                    android:textSize="@dimen/sp_13" />

                                <View
                                    android:layout_width="@dimen/dp_52"
                                    android:layout_height="@dimen/dp_1"
                                    android:layout_centerInParent="true"
                                    android:background="#999" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#E1B872"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_25"
                                android:text="商品有效期限:"
                                android:textColor="#fff"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:text="2018-10-13至2018-10-31"
                                android:textColor="#fff"
                                android:textSize="@dimen/sp_13" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_19"
                        android:background="@color/lineview" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_21"
                        android:layout_marginTop="@dimen/dp_19">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="购买数量："
                            android:textColor="#333"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="" />

                        <LinearLayout
                            android:layout_width="@dimen/dp_104"
                            android:layout_height="@dimen/dp_33"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_38"
                            android:background="@drawable/line16">

                            <TextView
                                android:id="@+id/jian"
                                android:layout_width="@dimen/dp_33"
                                android:layout_height="@dimen/dp_33"
                                android:background="@drawable/line15"
                                android:gravity="center"
                                android:text="—"
                                android:textColor="#fff"
                                android:textSize="@dimen/sp_30" />

                            <TextView
                                android:id="@+id/goodsnum"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#333"
                                android:textSize="@dimen/sp_21" />

                            <TextView
                                android:id="@+id/add"
                                android:layout_width="@dimen/dp_33"
                                android:layout_height="@dimen/dp_33"
                                android:background="@drawable/line17"
                                android:gravity="center"
                                android:text="+"
                                android:textColor="#fff"
                                android:textSize="@dimen/sp_30" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lineview" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_21">

                        <TextView
                            android:id="@+id/nametag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="联系人名："
                            android:textColor="#333"
                            android:textSize="@dimen/sp_15" />

                        <EditText
                            android:id="@+id/lianxiren"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/nametag"

                            android:background="@null"
                            android:singleLine="true"
                            android:text="减肥减肥"
                            android:textColor="#333"
                            android:textSize="@dimen/sp_15" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lineview" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_21">

                        <TextView
                            android:id="@+id/teltag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="联系电话："
                            android:textColor="#333"
                            android:textSize="@dimen/sp_15" />

                        <EditText
                            android:id="@+id/telnumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/teltag"
                            android:background="@null"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:singleLine="true"
                            android:text="1234555"
                            android:textColor="#333"
                            android:textSize="@dimen/sp_15" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lineview" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_21"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="备注信息："
                        android:textColor="#333"
                        android:textSize="@dimen/sp_15" />

                    <EditText
                        android:id="@+id/beizhu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_102"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_21"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/line18"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLength="100"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_13"
                        android:text="你好啊"
                        android:textColor="#91908E"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/include_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include layout="@layout/dingdan_pop" />
        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/jianbian" />

    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_21" />

                <TextView
                    android:id="@+id/zongjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:text="19.9"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_21" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="¥"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/zongyuanjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text="179"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="@dimen/dp_52"
                        android:layout_height="@dimen/dp_1"
                        android:layout_centerInParent="true"
                        android:background="#999" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dingdan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_67"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单明细"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:src="@mipmap/up" />
        </LinearLayout>

        <TextView
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="#E1B872"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="#fff"
            android:textSize="@dimen/sp_19" />
    </LinearLayout>
</LinearLayout>
